<main class="min-vh-100">
  <div
    class="container-fluid d-flex justify-content-center align-content-center pt-5 pb-5"
  >
    <section class="w-50 d-flex justify-content-center align-items-center">
      <div class="">
        <h2 class="fw-bolder fs-1 text-left">CREATE YOUR ACCOUNT.</h2>
        <p class="fw-medium fs-3">Enter the corresponding values for each field.</p>
      </div>
    </section>
    <form class="w-50 m-5">
      <div class="mb-3">
        <label
          id="exampleInputName"
          aria-describedby="nameHelp"
          class="form-label fw-semibold fs-4"
        >Name</label>
        <input
          type="email"
          class="form-control"
          id="name"
          aria-describedby="emailHelp"
        />
        <div id="emailHelp" class="form-text" style="color: #fcefaa;">Example:
          Ezequiel</div>
      </div>
      <div class="mb-3">
        <label
          id="surname"
          aria-describedby="surnameHelp"
          class="form-label fw-semibold fs-4"
        >Surname</label>
        <input
          type="text"
          class="form-control"
          id="surnameHelp"
          aria-describedby="surnameHelp"
        />
        <div id="emailHelp" class="form-text" style="color: #fcefaa;">Example:
          Quevedo</div>
      </div>
      <div class="mb-3">
        <label for="exampleUserPhoto" class="form-label fw-semibold fs-4">User
          photo</label>
        <input
          type="text"
          class="form-control"
          id="photo"
          aria-describedby="photo"
        />
        <div id="photoHelp" class="form-text" style="color: #fcefaa;">Example:
          user.png</div>
      </div>
      <div class="mb-3 w-100%">
        <label
          for="exampleInputEmail1"
          class="form-label fw-semibold fs-4"
        >Email</label>
        <input
          type="email"
          class="form-control"
          id="emailRegister"
          aria-describedby="emailHelp"
        />
        <div id="emailHelp" class="form-text" style="color: #fcefaa;">Example:
          ezequielquevedo111@gmail.com</div>
      </div>
      <div class="mb-3 w-100%">
        <label
          for="passwordHelp"
          class="form-label fw-semibold fs-4"
        >Password</label>
        <input
          type="password"
          class="form-control"
          id="passwordRegister"
          aria-describedby="passwordHelp"
        />
        <div id="passwordHelp" class="form-text" style="color: #fcefaa;"></div>
      </div>

      <button
        type="submit"
        class="btn w-100 fw-semibold"
        id="newUser"
        style="background-color: #fcefaa; color: #121010"
      >Register</button>
    </form>
  </div>
  <div
    class="d-flex flex-column justify-content-center align-items-center gap-3 icons"
  >
    <div>
      <h3>Sign up with Google</h3>
    </div>

    <button
      type="submit"
      id="googleLogin"
      style="border: none; background: none; padding: 0;"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="50"
        height="50"
        class="login-icon"
        viewBox="0 0 16 16"
        fill="#e7e4d7"
      >
        <path
          d="M15.545 6.558a9.4 9.4 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.7 7.7 0 0 1 5.352 2.082l-2.284 2.284A4.35 4.35 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.8 4.8 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.7 3.7 0 0 0 1.599-2.431H8v-3.08z"
        />
      </svg>
    </button>
  </div>
</main>
<script src="/scripts/register.js"></script>